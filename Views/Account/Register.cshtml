@model TPO_Seminar.Models.UserRegistration
@{
    ViewBag.Title = "Registracija";
}

<ul class="nav nav-tabs" data-tabs="tabs">
    <li class="active"><a data-toggle="tab" href="#ucenec">Učenec</a></li>
    <li><a data-toggle="tab" href="#instruktor">Inštruktor</a></li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="ucenec">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="UserName" class="col-sm-2 control-label">Up. ime</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.UserName, new { @class = "form-control", placeholder = "Uporabniško ime" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserName" class="col-sm-2 control-label">Ime</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.Name, new { @class = "form-control", placeholder = "Ime" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserName" class="col-sm-2 control-label">Priimek</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.LastName, new { @class = "form-control", placeholder = "Priimek" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">Geslo</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.UserDatas.Password, new { @class = "form-control",placeholder="Geslo" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label for="text" class="col-sm-2 control-label">Šola</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Students.Sola, new { @class = "form-control", placeholder = "Šola", type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="text" class="col-sm-2 control-label">Leto rojstva</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Students.LetoRojstva, new { @class = "form-control", placeholder = "Leto rojstva", type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" name="btn" value="ucenec" class="btn btn-default">Registriraj se</button>
                    </div>
                </div>
            </form>
        }
    </div>
    <div class="tab-pane" id="instruktor">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="UserName" class="col-sm-2 control-label">Up. ime</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.UserName, new { @class = "form-control", placeholder = "Uporabniško ime" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserName" class="col-sm-2 control-label">Ime</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.Name, new { @class = "form-control", placeholder = "Ime" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="UserName" class="col-sm-2 control-label">Priimek</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.LastName, new { @class = "form-control", placeholder = "Priimek" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserDatas.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">Geslo</label>
                    <div class="col-sm-10">
                        @Html.PasswordFor(m => m.UserDatas.Password, new { @class = "form-control",placeholder="Geslo" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Podjetje</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Instruktors.Podjetje, new { @class = "form-control", placeholder = "Podjetje", type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">Davčna številka</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Instruktors.DavcnaStevilka, new { @class = "form-control", placeholder = "Davčna številka", type = "text" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" name="btn" value="instruktor" class="btn btn-default">Registriraj se</button>
                    </div>
                </div>
            </form>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
