@using System.Globalization
@model IEnumerable<TPO_Seminar.Models.Orders>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Ime predmeta</th>
                    <th>Inštruktor</th>
                    <th>Datum izvajanja</th>
                    <th>Ura</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Subjects.SubjectName
                        </td>
                        <td>@item.Instruktors.UserProfile.UserName (@item.Instruktors.Podjetje)</td>
                        <td>@item.OrderDate.ToString("dd.MM.yyyy")</td>
                        <td>@item.OrderDate.Hour</td>
                        <td>
                            <button type="button" class="btn btn-default btn-xs" name="removeOrder" value="@item.Id">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>Izbriši
                                
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
<div class="panel panel-default">
    <div class="panel-heading">
        Košarica
    </div>
    <div class="panel-body">
        je prazna. Prvo se morate prijaviti na razporožljive datume
    </div>

</div>
}

<script>
    $('[name="removeOrder"]').click(function () {
        var itemId = $(this).attr('value');
        $.ajax({
            type: 'GET',
            url: "DeleteItemCart/" + itemId,
            dataType: "text",
            success: function (data) {
                $("body").html(data);
            }
        });
    });
</script>
