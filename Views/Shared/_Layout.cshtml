<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/logoico.ico" rel="shortcut icon" type="image/x-icon" />

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <link href="~/Scripts/components/bootstrap3/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/components/bootstrap3/css/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/components/bootstrap3/js/bootstrap.min.js"></script>




    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        a {
            padding: 0;
        }
    </style>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <img src="~/Images/logo_education-45bdb10cae64a12605dca31afc86c306.png" height="100px" width="100px" />@Html.ActionLink("TPO Inštrukcije", "Index", "Home")
                </p>
            </div>
            <div class="float-right">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - TPO seminarska</p>
            </div>
            <a href="#myModal" data-toggle="modal">
                <p class="text-center"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>Pošljite nam sporočilo</p>
            </a>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="exampleModalLabel">Novo sporočilo</h4>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="recipient-name" class="control-label">Pošiljatelj:</label>
                                    <input type="text" class="form-control" id="recipient-name">
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="control-label">Sporočilo:</label>
                                    <textarea class="form-control" id="message-text"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal" id="close">Zapri</button>
                            <button type="button" class="btn btn-primary" id="send">Pošlji</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
