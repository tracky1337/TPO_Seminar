<div class="panel panel-default" style="height: 600px;">
    <div class="panel-heading" id="accordion">
        <span class="glyphicon glyphicon-comment"></span> Pogovorno okno
    </div>
    <div class="panel-collapse collapse in" id="collapseOne">
        <div class="panel-body">
            <ul class="chat">
            </ul>
        </div>
        <div class="panel-footer">
            <div class="input-group">
                <input id="btn-input" type="text" class="form-control input-sm" placeholder="Napiši sporočilo tukaj..." />
                <span class="input-group-btn">
                    <button class="btn btn-warning btn-sm" id="btn-chat">
                        Pošlji</button>
                    <button class="btn btn-warning btn-sm level" id="btn-chat" onmousedown="FWRecorder.record('audio', 'audio.wav');" onmouseup="FWRecorder.stopRecording('audio');$('#send').click();">
                        <span class="level" style="width: 15px; height: 15px; position: absolute; -webkit-transform: rotate(180deg); -moz-transform: rotate(180deg); -o-transform: rotate(180deg); -ms-transform: rotate(180deg); transform: rotate(180deg);">
                            <div class="progress" style="position: relative; bottom: 0; left: 0; width: 100%; height: 0; background: #f5f5f5; opacity: 0.9;">
                            </div>
                        </span>
                        <span class="glyphicon glyphicon-earphone"></span>
                        Govori
                    </button>
                </span>

            </div>
        </div>
    </div>
</div>

